<%= javascript_include_tag 'new_flashcard.js' %>

<style>
.flashcard_box{
  width:200px;
  border:2px solid black;
}

</style>
<h1 id = 'title_header'><%= @set.name %></h1>

<input type="text" id="name"> Name </input>

<br>

<%= form_for :set_name do |f| %>
  <%= f.label :question, :id => 'question-label' %>
  <%= f.text_field :question, :id => 'question-form' %>
  <br>
  <%= f.label :answer, :id => 'answer-label' %>
  <%= f.text_field :answer, :id => 'answer-form' %>

  <br>

  <button type="button" name="button" id = 'submit_button'>Add Flashcard</button>

<% end %>


<% for i in @set.flashcards do %>

<div class="flashcard_box">
<p class="question">
  <input type="text" value="<%= i.question %>">
</p>

<br>

<p class="answer">
  <input type="text" value="<%= i.answer %>">
</p>

</div>

<br>

<% end %>


<button id="submit">Save</button>
<div></div>
