<%= javascript_include_tag 'new_flashcard.js' %>

<%= form_for :set_name do |f| %>
  <%= f.label :question, :id => 'question-label' %>
  <%= f.text_field :question, :id => 'question-form' %>
  <br>
  <%= f.label :answer, :id => 'answer-label' %>
  <%= f.text_field :answer, :id => 'answer-form' %>

  <button type="button" name="button" id = 'submit_button'>Add new flashcard</button>

<% end %>

<button id="new_card">New Flashcard</button>


<% for i in @set.flashcards do %>
<p>Question: <%= i.question %></p>
<p class = 'answer'>Answer: <%= i.answer %></p>
<% end %>

<div></div>
